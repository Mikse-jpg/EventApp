@page "{id:int}"
@model EventApp.Pages.EventSupplementModel
@{
    ViewData["Title"] = "Login";
}

<body>

    <div class="container" style="text-align: -webkit-center">
        <div class="card mb-2" style="width: 30rem">
            <div class="card-header p-2">
                <h5 class="card-title">
                    (@Model.LoggedInUser.Id) - @Model.LoggedInUser.Username - Order supplements?
                </h5>
            </div>

            <div class="card-body" style="display: flex; justify-content: center">

                <form method="post">

                    <input type="text" asp-for="EventSupplement.UserId" placeholder="@Model.LoggedInUser.Id" style="text-align: center" /> <br /> <br />

                    <label>What type of menu do you want?</label> <br />
                    <select class="form-control" asp-for="EventSupplement.Menu">
                        <option>Vegan Menu</option>
                        <option>Normal Menu</option>
                    </select> <br /> <br />

                    <label>Do you wish Champagne?</label> <br />
                    <select class="form-control" asp-for="EventSupplement.Champagne">
                        <option>0</option>
                        <option>1</option>
                    </select> <br /> <br />


                    <button class="events-button" type="submit">Accept</button>

                    <a class="btn" type="button" asp-page="Index">
                        <i class="events-button">Cancel</i>
                    </a>

                </form>

            </div>

        </div>
    </div>

</body>
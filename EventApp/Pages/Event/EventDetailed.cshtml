@page "{id:int}"
@model EventApp.Pages.Event.EventDetailedModel
@{
    ViewData["Title"] = "Details";
}

<body>
    <div class="card mb-2" style="width: 30rem">
        <div class="card-header p-2">
            <h5 class="card-title">
                (@Model.Event.Id) @Model.Event.Id - Edit events?
            </h5>
        </div>


        <div class="card-footer" style="display: flex; justify-content: center">
            <button id="myModalBtn" class="btn" data-toggle="modal" data-target="#myModal">
                <i class="fa fa-info-circle"></i>
            </button>

        </div>

    </div>


    <div class="modal" id="myModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <small class="text-muted">(@Model.Event.Id)</small>
                        @Model.Event.Id
                    </h5>
                    <a type="button" class="close" asp-page="Index">&times;</a>
                </div>
                <div class="modal-body">
                    <p><b>Title:</b> @Model.Event.Title</p>
                    <p><b>Description:</b> @Model.Event.Description</p>
                    
                </div>
                <div class="modal-footer">
                    <a type="button" class="btn btn-danger" asp-page="Index">Close</a>
                </div>
            </div>
        </div>
    </div>

</body>

@section Scripts {
    <script>
        $(document).ready(function() {
            $("#myModal").Modal({ backdrop: "static" });
            $("#myModal").Modal('show');
        });
    </script>
}

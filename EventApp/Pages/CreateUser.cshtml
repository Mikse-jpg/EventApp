@page
@model EventApp.Pages.CreateUserModel
@{
    ViewData["Title"] = "Create User";
    Layout = "Shared/_HomeLayout";
}


<body style="background-color: slategrey"> <br /> <br /> <br /> <br /> <br />

<div class="container" align="center">

    <h1 style="text-align: center">Sign Up</h1><br />

    <div>
        <form method="post">

            <label style="font: bold 15px arial, verdana">Username</label>
            <input type="text" asp-for="User.Username" placeholder="Username" /> <br /> <br />

            <label style="font: bold 15px arial, verdana">Password</label>
            <input type="password" asp-for="User.Password" placeholder="Password" /> <br /> <br />

            @if (@Model.ErrorMessage != "")
            {
                <p style="color: firebrick; font: bold 15px arial, verdana">@Model.ErrorMessage</p>
            }

            <button class="events-button" type="submit">Create User</button>

            <button type="button" class="events-button" onclick="window.location.href = '/Login'">Already signed up?</button>

        </form>

    </div>

</div>

</body>





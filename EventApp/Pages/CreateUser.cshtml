@page
@model EventApp.Pages.CreateUserModel
@{
    ViewData["Title"] = "Create User";
    Layout = "Shared/_HomeLayout";
}


<body>
<br /> <br /> <br /> <br /> <br />

<div class="container" align="center">

    <h1 style="text-align: center">Sign Up</h1><br />

    <div>
        <form method="post">

            <label class="form-check-label">Username</label>
            <input type="text" asp-for="User.Username" placeholder="Username" /> <br /> <br />

            <label class="form-check-label">Password</label>
            <input type="text" asp-for="User.Password" placeholder="Password" /> <br /> <br />

            <button class="events-button" type="submit">Create User</button>

            <button type="button" class="events-button" onclick="window.location.href = '/Login'">Already signed up?</button>

        </form>

    </div>

</div>

</body>




